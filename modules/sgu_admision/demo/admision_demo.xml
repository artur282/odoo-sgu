<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Periodo académico demo -->
        <record id="periodo_demo_2025_1" model="admision.periodo">
            <field name="name">2025-1</field>
            <field name="fecha_inicio" eval="'2025-01-15'"/>
            <field name="fecha_fin" eval="'2025-06-30'"/>
            <field name="active" eval="True"/>
            <field name="description">Primer semestre académico 2025</field>
        </record>
        
        <!-- Sedes demo -->
        <record id="sede_demo_principal" model="admision.sede">
            <field name="name">Sede Principal</field>
            <field name="code">PPAL</field>
            <field name="direccion">Av. Universidad, Sector Los Llanos</field>
            <field name="municipio">San Juan de los Morros</field>
            <field name="estado">Guárico</field>
            <field name="telefono">0246-4312345</field>
            <field name="email">sede.principal@unerg.edu.ve</field>
            <field name="director">Dr. Juan Pérez</field>
        </record>
        
        <record id="sede_demo_calabozo" model="admision.sede">
            <field name="name">Calabozo</field>
            <field name="code">CLAB</field>
            <field name="direccion">Calle Bolívar, Sector Centro</field>
            <field name="municipio">Calabozo</field>
            <field name="estado">Guárico</field>
            <field name="telefono">0246-8712345</field>
            <field name="email">sede.calabozo@unerg.edu.ve</field>
            <field name="director">Dra. María González</field>
        </record>
        
        <!-- Programas académicos demo -->
        <record id="programa_demo_ing_sistemas" model="admision.programa">
            <field name="name">Ingeniería en Sistemas</field>
            <field name="code">IS</field>
            <field name="facultad">Ingeniería</field>
            <field name="nivel">pregrado</field>
            <field name="duracion">10</field>
            <field name="description">Carrera de pregrado para la formación de ingenieros en sistemas computacionales.</field>
            <field name="sede_ids" eval="[(4, ref('sede_demo_principal'))]"/>
        </record>
        
        <record id="programa_demo_derecho" model="admision.programa">
            <field name="name">Derecho</field>
            <field name="code">DER</field>
            <field name="facultad">Ciencias Jurídicas</field>
            <field name="nivel">pregrado</field>
            <field name="duracion">10</field>
            <field name="description">Carrera de pregrado para la formación de abogados.</field>
            <field name="sede_ids" eval="[(4, ref('sede_demo_principal')), (4, ref('sede_demo_calabozo'))]"/>
        </record>
        
        <record id="programa_demo_medicina" model="admision.programa">
            <field name="name">Medicina</field>
            <field name="code">MED</field>
            <field name="facultad">Ciencias de la Salud</field>
            <field name="nivel">pregrado</field>
            <field name="duracion">12</field>
            <field name="description">Carrera de pregrado para la formación de médicos.</field>
            <field name="sede_ids" eval="[(4, ref('sede_demo_principal'))]"/>
        </record>
        
        <!-- Procesos de admisión demo -->
        <record id="proceso_demo_preinscripcion" model="admision.proceso">
            <field name="name">Preinscripción 2025-1</field>
            <field name="tipo">preinscripcion</field>
            <field name="periodo_id" ref="periodo_demo_2025_1"/>
            <field name="fecha_inicio" eval="(datetime.now() - timedelta(days=30)).strftime('%Y-%m-%d')"/>
            <field name="fecha_fin" eval="(datetime.now() + timedelta(days=30)).strftime('%Y-%m-%d')"/>
            <field name="state">active</field>
            <field name="cupos_opsu">100</field>
            <field name="cupos_especiales">20</field>
        </record>
        
        <record id="proceso_demo_inscripcion" model="admision.proceso">
            <field name="name">Inscripción 2025-1</field>
            <field name="tipo">inscripcion</field>
            <field name="periodo_id" ref="periodo_demo_2025_1"/>
            <field name="fecha_inicio" eval="(datetime.now() - timedelta(days=10)).strftime('%Y-%m-%d')"/>
            <field name="fecha_fin" eval="(datetime.now() + timedelta(days=20)).strftime('%Y-%m-%d')"/>
            <field name="state">active</field>
        </record>
        
        <!-- Secciones demo -->
        <record id="seccion_demo_sistemas_1" model="admision.seccion">
            <field name="name">IS-1</field>
            <field name="programa_id" ref="programa_demo_ing_sistemas"/>
            <field name="sede_id" ref="sede_demo_principal"/>
            <field name="periodo_id" ref="periodo_demo_2025_1"/>
            <field name="capacidad">40</field>
        </record>
        
        <record id="seccion_demo_derecho_1" model="admision.seccion">
            <field name="name">DER-1</field>
            <field name="programa_id" ref="programa_demo_derecho"/>
            <field name="sede_id" ref="sede_demo_principal"/>
            <field name="periodo_id" ref="periodo_demo_2025_1"/>
            <field name="capacidad">45</field>
        </record>
        
        <record id="seccion_demo_medicina_1" model="admision.seccion">
            <field name="name">MED-1</field>
            <field name="programa_id" ref="programa_demo_medicina"/>
            <field name="sede_id" ref="sede_demo_principal"/>
            <field name="periodo_id" ref="periodo_demo_2025_1"/>
            <field name="capacidad">35</field>
        </record>
        
        <!-- Horarios demo -->
        <record id="horario_demo_sistemas_1" model="admision.horario">
            <field name="seccion_id" ref="seccion_demo_sistemas_1"/>
            <field name="asignatura">Algoritmia I</field>
            <field name="profesor">Ing. Pedro Ramírez</field>
            <field name="aula">A-101</field>
            <field name="dia_semana">1</field>
            <field name="hora_inicio">8.0</field>
            <field name="hora_fin">10.0</field>
        </record>
        
        <record id="horario_demo_sistemas_2" model="admision.horario">
            <field name="seccion_id" ref="seccion_demo_sistemas_1"/>
            <field name="asignatura">Matemáticas I</field>
            <field name="profesor">Lic. Ana Sánchez</field>
            <field name="aula">A-102</field>
            <field name="dia_semana">2</field>
            <field name="hora_inicio">10.0</field>
            <field name="hora_fin">12.0</field>
        </record>
        
        <record id="horario_demo_sistemas_3" model="admision.horario">
            <field name="seccion_id" ref="seccion_demo_sistemas_1"/>
            <field name="asignatura">Introducción a la Programación</field>
            <field name="profesor">Ing. Carlos López</field>
            <field name="aula">LAB-01</field>
            <field name="dia_semana">3</field>
            <field name="hora_inicio">14.0</field>
            <field name="hora_fin">17.0</field>
        </record>
    </data>
</odoo>