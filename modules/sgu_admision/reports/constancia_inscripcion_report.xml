<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_report_inscripcion" model="ir.actions.report">
            <field name="name">Constancia de Inscripción</field>
            <field name="model">admision.inscripcion</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">sgu_admision.report_inscripcion</field>
            <field name="report_file">sgu_admision.report_inscripcion</field>
            <field name="print_report_name">'Inscripción - %s' % (object.numero_inscripcion)</field>
            <field name="binding_model_id" ref="model_admision_inscripcion"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_inscripcion">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2 class="text-center mb-4">CONSTANCIA DE INSCRIPCIÓN</h2>
                            <h4 class="text-center mb-4">Universidad Nacional Experimental de los Llanos Centrales Rómulo Gallegos</h4>

                            <div class="row mt-4">
                                <div class="col-12">
                                    <table class="table table-bordered">
                                        <tr>
                                            <th class="text-center" colspan="2">DATOS DE LA INSCRIPCIÓN</th>
                                        </tr>
                                        <tr>
                                            <td width="40%"><strong>Número de Inscripción:</strong></td>
                                            <td width="60%"><span t-field="o.numero_inscripcion"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Fecha:</strong></td>
                                            <td><span t-field="o.fecha_inscripcion"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Proceso:</strong></td>
                                            <td><span t-field="o.proceso_id.name"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Periodo Académico:</strong></td>
                                            <td><span t-field="o.proceso_id.periodo_id.name"/></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                            <div class="row mt-4">
                                <div class="col-12">
                                    <table class="table table-bordered">
                                        <tr>
                                            <th class="text-center" colspan="2">DATOS DEL ESTUDIANTE</th>
                                        </tr>
                                        <tr>
                                            <td width="40%"><strong>Cédula de Identidad:</strong></td>
                                            <td width="60%"><span t-field="o.aspirante_id.cedula"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Apellidos y Nombres:</strong></td>
                                            <td><span t-field="o.aspirante_id.partner_id.name"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Programa/Carrera:</strong></td>
                                            <td><span t-field="o.programa_id.name"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Sede:</strong></td>
                                            <td><span t-field="o.sede_id.name"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Sección:</strong></td>
                                            <td><span t-field="o.seccion_id.name"/></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                            <div class="row mt-4">
                                <div class="col-12">
                                    <h5>HORARIO DE CLASES</h5>
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Asignatura</th>
                                                <th>Profesor</th>
                                                <th>Día</th>
                                                <th>Hora</th>
                                                <th>Aula</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="o.seccion_id.horario_ids" t-as="h">
                                                <tr>
                                                    <td><span t-field="h.asignatura"/></td>
                                                    <td><span t-field="h.profesor"/></td>
                                                    <td>
                                                        <t t-if="h.dia_semana == '1'">Lunes</t>
                                                        <t t-elif="h.dia_semana == '2'">Martes</t>
                                                        <t t-elif="h.dia_semana == '3'">Miércoles</t>
                                                        <t t-elif="h.dia_semana == '4'">Jueves</t>
                                                        <t t-elif="h.dia_semana == '5'">Viernes</t>
                                                        <t t-elif="h.dia_semana == '6'">Sábado</t>
                                                        <t t-else="">Domingo</t>
                                                    </td>
                                                    <td>
                                                        <t t-esc="'{:02d}:{:02d}'.format(int(h.hora_inicio), int((h.hora_inicio % 1) * 60))"/>
                                                        - 
                                                        <t t-esc="'{:02d}:{:02d}'.format(int(h.hora_fin), int((h.hora_fin % 1) * 60))"/>
                                                    </td>
                                                    <td><span t-field="h.aula"/></td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="row mt-4">
                                <div class="col-12">
                                    <h5>DOCUMENTACIÓN RECIBIDA</h5>
                                    <table class="table table-bordered">
                                        <tr>
                                            <td width="50%"><strong>Cédula de Identidad:</strong></td>
                                            <td width="50%"><span t-if="o.doc_cedula">✓</span><span t-else="">✗</span></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Título de Bachiller:</strong></td>
                                            <td><span t-if="o.doc_titulo">✓</span><span t-else="">✗</span></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Notas Certificadas:</strong></td>
                                            <td><span t-if="o.doc_notas">✓</span><span t-else="">✗</span></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Fotos:</strong></td>
                                            <td><span t-if="o.doc_fotos">✓</span><span t-else="">✗</span></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Partida de Nacimiento:</strong></td>
                                            <td><span t-if="o.doc_partida">✓</span><span t-else="">✗</span></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Otros:</strong></td>
                                            <td><span t-if="o.doc_otros">✓</span><span t-else="">✗</span></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                            <div class="row mt-5">
                                <div class="col-6 text-center">
                                    <p>_________________________</p>
                                    <p>Firma del Estudiante</p>
                                </div>
                                <div class="col-6 text-center">
                                    <p>_________________________</p>
                                    <p>Firma y Sello</p>
                                    <p><small>Control de Estudios</small></p>
                                </div>
                            </div>
                            
                            <div class="text-center mt-5">
                                <p><strong>Fecha de emisión:</strong> <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y %H:%M:%S')"/></p>
                                <p><strong>Impreso por:</strong> <span t-field="o.usuario_inscripcion_id.name"/></p>
                                <small>Esta constancia no es válida sin el sello y firma autorizada.</small>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>