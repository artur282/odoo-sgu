<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para Aspirante -->
    <record id="view_admision_aspirante_form" model="ir.ui.view">
        <field name="name">admision.aspirante.form</field>
        <field name="model">admision.aspirante</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_convertir_estudiante" string="Convertir a Estudiante" 
                            type="object" class="oe_highlight"
                            invisible="[('state', '!=', 'inscrito')]"/>
                    <field name="state" widget="statusbar" statusbar_visible="registrado,preinscrito,inscrito,estudiante"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_ver_preinscripciones" type="object" class="oe_stat_button" icon="fa-file-text">
                            <field name="preinscripcion_ids" string="Preinscripciones" widget="statinfo"/>
                        </button>
                        <button name="action_ver_inscripciones" type="object" class="oe_stat_button" icon="fa-graduation-cap">
                            <field name="inscripcion_ids" string="Inscripciones" widget="statinfo"/>
                        </button>
                    </div>
                    <field name="partner_id" invisible="1"/>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="cedula" placeholder="V-12345678"/>
                            <field name="partner_id" string="Nombre" required="1"/>
                            <field name="fecha_nacimiento"/>
                            <field name="sexo"/>
                        </group>
                        <group>
                            <field name="tipo_asignacion"/>
                            <field name="programa_id"/>
                            <field name="sede_id"/>
                            <field name="documentos_completos"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Datos Personales" name="datos_personales">
                            <group>
                                <group>
                                    <field name="etnia"/>
                                    <field name="discapacidad"/>
                                    <field name="tipo_discapacidad" invisible="[('discapacidad', '=', False)]"/>
                                </group>
                                <group>
                                    <field name="notas_documentos"/>
                                </group>
                            </group>
                        </page>
                        <page string="Contacto" name="contacto">
                            <group>
                                <group>
                                    <!-- Mostrar campos de contacto directamente -->
                                    <field name="email" related="partner_id.email" readonly="1"/>
                                    <field name="phone" related="partner_id.phone" readonly="1"/>
                                    <field name="mobile" related="partner_id.mobile" readonly="1"/>
                                </group>
                                <group>
                                    <!-- Puedes añadir otros campos de contacto aquí si es necesario -->
                                </group>
                            </group>
                            <separator string="Dirección"/>
                            <group>
                                 <group>
                                     <!-- Mostrar campos de dirección directamente -->
                                     <field name="street" related="partner_id.street" readonly="1"/>
                                     <field name="street2" related="partner_id.street2" readonly="1"/>
                                     <field name="city" related="partner_id.city" readonly="1"/>
                                 </group>
                                 <group>
                                     <field name="state_id" related="partner_id.state_id" readonly="1" options="{'no_open': True, 'no_create': True}"/>
                                     <field name="zip" related="partner_id.zip" readonly="1"/>
                                     <field name="country_id" related="partner_id.country_id" readonly="1" options="{'no_open': True, 'no_create': True}"/>
                                 </group>
                            </group>
                        </page>
                        <page string="Preinscripciones" name="preinscripciones">
                            <field name="preinscripcion_ids" readonly="1">
                                <list>
                                    <field name="numero_preinscripcion"/>
                                    <field name="proceso_id"/>
                                    <field name="fecha_preinscripcion"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Inscripciones" name="inscripciones">
                            <field name="inscripcion_ids" readonly="1">
                                <list>
                                    <field name="numero_inscripcion"/>
                                    <field name="proceso_id"/>
                                    <field name="seccion_id"/>
                                    <field name="fecha_inscripcion"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Vista de lista para Aspirante -->
    <record id="view_admision_aspirante_list" model="ir.ui.view">
        <field name="name">admision.aspirante.list</field>
        <field name="model">admision.aspirante</field>
        <field name="arch" type="xml">
            <list>
                <field name="cedula"/>
                <field name="partner_id"/>
                <field name="tipo_asignacion"/>
                <field name="programa_id"/>
                <field name="sede_id"/>
                <field name="state" decoration-info="state == 'registrado'" 
                       decoration-warning="state == 'preinscrito'" 
                       decoration-success="state == 'inscrito'" 
                       decoration-primary="state == 'estudiante'"/>
            </list>
        </field>
    </record>
    
    <!-- Vista de búsqueda para Aspirante -->
    <record id="view_admision_aspirante_search" model="ir.ui.view">
        <field name="name">admision.aspirante.search</field>
        <field name="model">admision.aspirante</field>
        <field name="arch" type="xml">
            <search>
                <field name="cedula"/>
                <field name="partner_id"/>
                <field name="programa_id"/>
                <field name="sede_id"/>
                <filter string="Registrados" name="registrado" domain="[('state', '=', 'registrado')]"/>
                <filter string="Preinscritos" name="preinscrito" domain="[('state', '=', 'preinscrito')]"/>
                <filter string="Inscritos" name="inscrito" domain="[('state', '=', 'inscrito')]"/>
                <filter string="Estudiantes" name="estudiante" domain="[('state', '=', 'estudiante')]"/>
                <separator/>
                <filter string="OPSU" name="opsu" domain="[('tipo_asignacion', '=', 'opsu')]"/>
                <filter string="Rector" name="rector" domain="[('tipo_asignacion', '=', 'rector')]"/>
                <filter string="Secretaria" name="secretaria" domain="[('tipo_asignacion', '=', 'secretaria')]"/>
                <filter string="DACE" name="dace" domain="[('tipo_asignacion', '=', 'dace')]"/>
                <filter string="Aspirante" name="aspirante" domain="[('tipo_asignacion', '=', 'aspirante')]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Programa" name="group_by_programa" context="{'group_by': 'programa_id'}"/>
                    <filter string="Sede" name="group_by_sede" context="{'group_by': 'sede_id'}"/>
                    <filter string="Estado" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Tipo de Asignación" name="group_by_tipo" context="{'group_by': 'tipo_asignacion'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Acción para Aspirante -->
    <record id="action_admision_aspirante" model="ir.actions.act_window">
        <field name="name">Aspirantes</field>
        <field name="res_model">admision.aspirante</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay aspirantes registrados
            </p>
            <p>
                Aquí se mostrarán los aspirantes a ingresar a la universidad.
                Pueden ser asignados por OPSU, aprobados por autoridades, o
                aspirantes regulares.
            </p>
        </field>
    </record>
</odoo>