<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para aspirantes -->
    <record id="admision_aspirante_view_form" model="ir.ui.view">
        <field name="name">admision.aspirante.form</field>
        <field name="model">admision.aspirante</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                    <button name="action_convertir_estudiante" string="Convertir en Estudiante" type="object" 
                            class="oe_highlight" invisible="state != 'inscrito'"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" placeholder="Nombre del Aspirante"/>
                        </h1>
                    </div>
                    <widget name="web_ribbon" title="Estudiante Activo" invisible="state != 'estudiante'"/>
                    <group>
                        <group>
                            <field name="cedula" placeholder="V-12345678"/>
                            <field name="codigo_opsu" placeholder="Código OPSU"/>
                            <field name="email" placeholder="ejemplo@gmail.com.com"/>
                            <field name="phone" placeholder="ejemplo: 04240000"/>
                            <field name="mobile" placeholder="ejemplo: 04140000"/>
                        </group>
                        <group>
                            <field name="fecha_nacimiento" placeholder="Fecha de Nacimiento" />
                            <field name="sexo" placeholder="Sexo"/>
                            <field name="etnia" placeholder="Etnia"/>
                            <field name="discapacidad" placeholder="Discapacidad"/>
                            <field name="tipo_discapacidad" placeholder="Tipo de Discapacidad" invisible="not discapacidad"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="tipo_asignacion" placeholder="Tipo de Asignación"/>
                            <field name="programa_id" placeholder="Programa" />
                            <field name="sede_id" placeholder="Sede" />
                        </group>
                        <group>
                            <field name="documentos_completos"/>
                            <field name="notas_documentos" placeholder="Observaciones sobre los documentos"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Dirección" name="address">
                            <group>
                                <group>
                                    <field name="street" placeholder="Calle, Avenida, Sector"/>
                                    <field name="street2" placeholder="Edificio, Casa, Apartamento"/>
                                    <field name="city" placeholder="Ciudad"/>
                                </group>
                                <group>
                                    <field name="state_id" placeholder="Estado" />
                                    <field name="zip" placeholder="Código Postal"/>
                                    <field name="country_id" placeholder="País" />
                                </group>
                            </group>
                        </page>
                        <page string="Preinscripciones" name="preinscripciones" invisible="state == 'registrado'">
                            <field name="preinscripcion_ids">
                                <list>
                                    <field name="numero_preinscripcion"/>
                                    <field name="proceso_id"/>
                                    <field name="fecha_preinscripcion"/>
                                    <field name="programa_id"/>
                                    <field name="state" decoration-success="state == 'confirmed'" decoration-info="state == 'draft'"/>
                                </list>
                            </field>
                            <div class="oe_right">
                                <button name="action_ver_preinscripciones" string="Ver Preinscripciones" type="object" 
                                        class="btn-primary" invisible="state == 'registrado'" icon="fa-list"/>
                            </div>
                        </page>
                        <page string="Inscripciones" name="inscripciones" invisible="state in ('registrado', 'preinscrito')">
                            <field name="inscripcion_ids">
                                <list>
                                    <field name="numero_inscripcion"/>
                                    <field name="proceso_id"/>
                                    <field name="fecha_inscripcion"/>
                                    <field name="seccion_id"/>
                                    <field name="state" decoration-success="state == 'confirmed'" decoration-info="state == 'draft'"/>
                                </list>
                            </field>
                            <div class="oe_right">
                                <button name="action_ver_inscripciones" string="Ver Inscripciones" type="object" 
                                        class="btn-primary" invisible="state in ('registrado', 'preinscrito')" icon="fa-list"/>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de lista para aspirantes -->
    <record id="admision_aspirante_view_list" model="ir.ui.view">
        <field name="name">admision.aspirante.list</field>
        <field name="model">admision.aspirante</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'estudiante'" decoration-info="state == 'preinscrito'" decoration-warning="state == 'inscrito'">
                <field name="cedula"/>
                <field name="partner_id"/>
                <field name="tipo_asignacion"/>
                <field name="programa_id"/>
                <field name="sede_id"/>
                <field name="state" decoration-success="state == 'estudiante'" decoration-info="state == 'preinscrito'" decoration-warning="state == 'inscrito'"/>
                <field name="documentos_completos"/>
            </list>
        </field>
    </record>

    <!-- Vista de búsqueda para aspirantes -->
    <record id="admision_aspirante_view_search" model="ir.ui.view">
        <field name="name">admision.aspirante.search</field>
        <field name="model">admision.aspirante</field>
        <field name="arch" type="xml">
            <search>
                <field name="cedula"/>
                <field name="partner_id"/>
                <field name="programa_id"/>
                <field name="sede_id"/>
                <separator/>
                <filter string="Estudiantes Activos" name="estudiantes" domain="[('state', '=', 'estudiante')]"/>
                <filter string="Inscritos" name="inscritos" domain="[('state', '=', 'inscrito')]"/>
                <filter string="Preinscritos" name="preinscritos" domain="[('state', '=', 'preinscrito')]"/>
                <filter string="Registrados" name="registrados" domain="[('state', '=', 'registrado')]"/>
                <separator/>
                <filter string="Con Documentos Completos" name="doc_completos" domain="[('documentos_completos', '=', True)]"/>
                <separator/>
                <filter string="Asignación OPSU" name="opsu" domain="[('tipo_asignacion', '=', 'opsu')]"/>
                <filter string="Casos Especiales" name="especiales" domain="[('tipo_asignacion', 'in', ['rector', 'secretaria', 'dace'])]"/>
                <filter string="Aspirantes a Cupo" name="aspirantes" domain="[('tipo_asignacion', '=', 'aspirante')]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Programa" name="group_programa" context="{'group_by': 'programa_id'}"/>
                    <filter string="Sede" name="group_sede" context="{'group_by': 'sede_id'}"/>
                    <filter string="Tipo de Asignación" name="group_tipo" context="{'group_by': 'tipo_asignacion'}"/>
                </group>
            </search>
        </field>
    </record>


    <!-- Acción para el menú de aspirantes -->
    <record id="action_admision_aspirante" model="ir.actions.act_window">
        <field name="name">Aspirantes</field>
        <field name="res_model">admision.aspirante</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Crea tu primer aspirante!
            </p>
            <p>
                Gestiona los aspirantes a ingresar a la institución.
            </p>
        </field>
    </record>
</odoo>