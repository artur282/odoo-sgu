<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para Sección -->
    <record id="view_admision_seccion_form" model="ir.ui.view">
        <field name="name">admision.seccion.form</field>
        <field name="model">admision.seccion</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_ver_inscritos" type="object" class="oe_stat_button" icon="fa-users">
                            <field name="inscripcion_ids" string="Inscritos" widget="statinfo"/>
                        </button>
                        <button name="action_ver_horarios" type="object" class="oe_stat_button" icon="fa-calendar">
                            <field name="horario_ids" string="Horarios" widget="statinfo"/>
                        </button>
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Código de Sección"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="programa_id" placeholder="Seleccione el programa"/>
                            <field name="sede_disponible_ids" invisible="1"/>
                            <field name="sede_id" options="{'no_create': True}" placeholder="Seleccione la sede"/>
                        </group>
                        <group>
                            <field name="periodo_id" placeholder="Seleccione el periodo"/>
                            <field name="capacidad" placeholder="Ingrese la capacidad"/>
                            <field name="capacidad_restante"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Horarios" name="horarios">
                            <field name="horario_ids">
                                <list>
                                    <field name="asignatura"/>
                                    <field name="profesor"/>
                                    <field name="dia_semana"/>
                                    <field name="hora_inicio"/>
                                    <field name="hora_fin"/>
                                    <field name="duracion"/>
                                </list>
                            </field>
                        </page>
                        <page string="Estudiantes Inscritos" name="inscritos">
                            <field name="inscripcion_ids">
                                <list>
                                    <field name="numero_inscripcion"/>
                                    <field name="aspirante_id"/>
                                    <field name="fecha_inscripcion"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Vista de lista para Sección -->
    <record id="view_admision_seccion_list" model="ir.ui.view">
        <field name="name">admision.seccion.list</field>
        <field name="model">admision.seccion</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="programa_id"/>
                <field name="sede_id"/>
                <field name="periodo_id"/>
                <field name="capacidad"/>
                <field name="capacidad_restante"/>
                <field name="active" invisible="1"/>
            </list>
        </field>
    </record>
    
    <!-- Vista de búsqueda para Sección -->
    <record id="view_admision_seccion_search" model="ir.ui.view">
        <field name="name">admision.seccion.search</field>
        <field name="model">admision.seccion</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="programa_id"/>
                <field name="sede_id"/>
                <field name="periodo_id"/>
                <filter string="Con Cupos Disponibles" name="con_cupos" domain="[('capacidad_restante', '>', 0)]"/>
                <filter string="Sin Cupos Disponibles" name="sin_cupos" domain="[('capacidad_restante', '=', 0)]"/>
                <filter string="Archivadas" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Programa" name="group_by_programa" context="{'group_by': 'programa_id'}"/>
                    <filter string="Sede" name="group_by_sede" context="{'group_by': 'sede_id'}"/>
                    <filter string="Periodo" name="group_by_periodo" context="{'group_by': 'periodo_id'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Acción para Sección -->
    <record id="action_admision_seccion" model="ir.actions.act_window">
        <field name="name">Secciones</field>
        <field name="res_model">admision.seccion</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cree su primera sección
            </p>
        </field>
    </record>
</odoo>