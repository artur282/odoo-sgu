<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para Sede -->
    <record id="view_admision_sede_form" model="ir.ui.view">
        <field name="name">admision.sede.form</field>
        <field name="model">admision.sede</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_ver_aspirantes" type="object" class="oe_stat_button" icon="fa-users">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="count_aspirantes"/></span>
                                <span class="o_stat_text">Aspirantes</span>
                            </div>
                        </button>
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre de la Sede"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code" placeholder="Código de la Sede"/>
                            <field name="municipio" placeholder="Municipio"/>
                            <field name="estado" placeholder="Estado"/>
                        </group>
                        <group>
                            <field name="telefono" placeholder="Número de teléfono"/>
                            <field name="email" placeholder="Correo electrónico"/>
                            <field name="director" placeholder="Nombre del Director"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Dirección" name="direccion">
                            <field name="direccion" placeholder="Dirección completa de la sede..."/>
                        </page>
                        <page string="Programas" name="programas">
                            <field name="programa_ids" widget="many2many_tags" placeholder="Seleccionar programas..."/>
                        </page>
                        <page string="Aspirantes" name="aspirantes">
                            <group>
                                <group>
                                    <field name="count_preinscritos" string="Preinscritos"/>
                                    <field name="count_inscritos" string="Inscritos"/>
                                </group>
                                <group>
                                    <field name="count_estudiantes" string="Estudiantes Activos"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Vista de lista para Sede -->
    <record id="view_admision_sede_list" model="ir.ui.view">
        <field name="name">admision.sede.list</field>
        <field name="model">admision.sede</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="name"/>
                <field name="municipio"/>
                <field name="estado"/>
                <field name="telefono"/>
                <field name="director"/>
                <field name="active" invisible="1"/>
            </list>
        </field>
    </record>
    
    <!-- Vista de búsqueda para Sede -->
    <record id="view_admision_sede_search" model="ir.ui.view">
        <field name="name">admision.sede.search</field>
        <field name="model">admision.sede</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="municipio"/>
                <field name="estado"/>
                <field name="director"/>
                <filter string="Archivados" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Estado" name="group_by_estado" context="{'group_by': 'estado'}"/>
                    <filter string="Municipio" name="group_by_municipio" context="{'group_by': 'municipio'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Acción para Sede -->
    <record id="action_admision_sede" model="ir.actions.act_window">
        <field name="name">Sedes</field>
        <field name="res_model">admision.sede</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cree su primera sede
            </p>
        </field>
    </record>
</odoo>