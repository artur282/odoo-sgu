<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de formulario para el wizard de importación de casos aprobados -->
        <record id="view_sgu_importar_aprobados_wizard_form" model="ir.ui.view">
            <field name="name">sgu.importar.aprobados.wizard.form</field>
            <field name="model">sgu.importar.aprobados.wizard</field>
            <field name="arch" type="xml">
                <form string="Importar Casos Aprobados">
                    <sheet>
                        <group>
                            <field name="archivo_csv" filename="archivo_nombre"/>
                            <field name="archivo_nombre" invisible="1"/>
                            <field name="tipo_aprobacion"/>
                            <field name="carrera_id"/>
                            <field name="sede_id"/>
                        </group>
                        <notebook>
                            <page string="Configuración de Campos">
                                <group>
                                    <group string="Mapeo de columnas básico">
                                        <field name="campo_cedula"/>
                                        <field name="campo_nombre1"/>
                                        <field name="campo_nombre2"/>
                                        <field name="campo_apellido1"/>
                                        <field name="campo_apellido2"/>
                                    </group>
                                    <group string="Mapeo de columnas adicionales">
                                        <field name="campo_carrera"/>
                                        <field name="campo_sede"/>
                                        <field name="campo_genero"/>
                                        <field name="campo_email"/>
                                        <field name="campo_telefono"/>
                                    </group>
                                </group>
                                <div class="alert alert-info" role="alert">
                                    <p><strong>Formato esperado:</strong> Archivo CSV con cabeceras que incluyan al menos los campos de cédula, primer nombre y primer apellido.</p>
                                    <p>Si el archivo incluye información de carrera y sede específicas, estas tendrán prioridad sobre las seleccionadas por defecto.</p>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="action_importar" string="Importar" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Acción para el wizard de importación de casos aprobados -->
        <record id="action_sgu_importar_aprobados_wizard" model="ir.actions.act_window">
            <field name="name">Importar Casos Aprobados</field>
            <field name="res_model">sgu.importar.aprobados.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
