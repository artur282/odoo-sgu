<odoo>
    <record id="view_sede_form" model="ir.ui.view">
        <field name="name">sgu.sede.form</field>
        <field name="model">sgu_sedes</field>
        <field name="arch" type="xml">
            <form string="Gestión de Sedes">
                <header>
                    <button name="toggle_active" type="object" string="Activar/Desactivar" class="btn-primary"/>
                    <button name="action_volver_a_lista" type="object" string="Volver a la lista" class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <div style="display: flex; align-items: center;">
                            <field name="logo" widget="image" class="oe_avatar"/>
                            <div>
                                <label for="nombre_sedes" class="oe_edit_only"/>
                                <h1><field name="nombre_sedes" placeholder="Nombre de la sede"/></h1>
                            </div>
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="instituciones_id" placeholder="Institución"/>
                            <field name="codigo_sede" placeholder="Código de la sede"/>
                            <field name="estado_id" placeholder="Estado"/>
                            <field name="municipio" placeholder="Municipio"/>
                        </group>
                        <group>
                            <field name="parroquia" placeholder="Parroquia"/>
                            <field name="direccion" placeholder="Dirección"/>
                            <field name="correo_sede" placeholder="Correo electrónico"/>
                            <field name="telefono_sede" placeholder="Teléfono"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Información General">
                            <group>
                                <group string="Información de Contacto">
                                    <field name="direccion" placeholder="Dirección"/>
                                    <field name="correo_sede" placeholder="Correo electrónico" widget="email"/>
                                    <field name="telefono_sede" placeholder="Teléfono" widget="phone"/>
                                </group>
                                <group string="Información Administrativa">
                                    <field name="active" invisible="1"/>
                                    <field name="create_date" string="Fecha de Creación" readonly="1"/>
                                    <field name="write_date" string="Última Modificación" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Áreas">
                            <field name="areas_ids">
                                <list editable="bottom">
                                    <field name="nombre" string="Área"/>
                                    <field name="codigo" string="Código de Área"/>
                                </list>
                            </field>
                        </page>
                        <page string="Firma">
                            <group>
                                <field name="firma_coordinador" widget="image"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_sede_list" model="ir.ui.view">
        <field name="name">sgu.sede.list</field>
        <field name="model">sgu_sedes</field>
        <field name="arch" type="xml">
            <list string="Sedes">
                <field name="instituciones_id" string="Institución"/>
                <field name="nombre_sedes" string="Nombre de la Sede"/>
                <field name="codigo_sede" string="Código"/>
                <field name="estado_id" string="Estado"/>
                <field name="municipio" string="Municipio"/>
                <field name="correo_sede" string="Correo"/>
                <field name="telefono_sede" string="Teléfono"/>
                <field name="active" invisible="1"/>
            </list>
        </field>
    </record>

    <record id="view_sede_kanban" model="ir.ui.view">
        <field name="name">sgu.sede.kanban</field>
        <field name="model">sgu_sedes</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="nombre_sedes"/>
                <field name="instituciones_id"/>
                <field name="codigo_sede"/>
                <field name="estado_id"/>
                <field name="logo"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image: url(#{kanban_image('sgu_sedes', 'logo', record.id.raw_value, placeholder)}); background-position: center; background-size: cover;">
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="nombre_sedes"/></strong>
                                <div>
                                    <strong>Institución: </strong><field name="instituciones_id"/>
                                </div>
                                <div>
                                    <strong>Código: </strong><field name="codigo_sede"/>
                                </div>
                                <div>
                                    <strong>Estado: </strong><field name="estado_id"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_sede_search" model="ir.ui.view">
        <field name="name">sgu.sede.search</field>
        <field name="model">sgu_sedes</field>
        <field name="arch" type="xml">
            <search>
                <field name="nombre_sedes"/>
                <field name="codigo_sede"/>
                <field name="instituciones_id"/>
                <field name="estado_id"/>
                <field name="municipio"/>
                <filter string="Activos" name="activo" domain="[('active','=',True)]"/>
                <filter string="Inactivos" name="inactivo" domain="[('active','=',False)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Institución" name="group_institucion" context="{'group_by': 'instituciones_id'}"/>
                    <filter string="Estado" name="group_estado" context="{'group_by': 'estado_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="sgu_sedes_action" model="ir.actions.act_window">
        <field name="name">Sedes</field>
        <field name="res_model">sgu_sedes</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_sede_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Crea tu primera sede!
            </p>
            <p>
                Registra las sedes de tu institución para gestionar 
                su información y áreas correspondientes.
            </p>
        </field>
    </record>
</odoo>