<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de formulario para autoridades -->
        <record id="view_sgu_autoridad_form" model="ir.ui.view">
            <field name="name">sgu.autoridad.form</field>
            <field name="model">sgu.autoridad</field>
            <field name="arch" type="xml">
                <form string="Autoridad">
                    <sheet>
                        <field name="firma" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Nombre completo"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="cargo"/>
                                <field name="sede_id"/>
                                <field name="email"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="fecha_inicio_cargo" placeholder="Fecha de inicio"/>
                                <field name="fecha_fin_cargo" placeholder="Fecha de fin"/>
                                <field name="telefono" placeholder="Teléfono"/>
                                <field name="puede_firmar_documentos"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista tree para autoridades -->
        <record id="view_sgu_autoridad_tree" model="ir.ui.view">
            <field name="name">sgu.autoridad.list</field>
            <field name="model">sgu.autoridad</field>
            <field name="arch" type="xml">
                <list string="Autoridades">
                    <field name="name"/>
                    <field name="cargo"/>
                    <field name="sede_id"/>
                    <field name="email"/>
                    <field name="puede_firmar_documentos"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Vista search para autoridades -->
        <record id="view_sgu_autoridad_search" model="ir.ui.view">
            <field name="name">sgu.autoridad.search</field>
            <field name="model">sgu.autoridad</field>
            <field name="arch" type="xml">
                <search string="Buscar autoridades">
                    <field name="name" string="Nombre" filter_domain="[('name', 'ilike', self)]"/>
                    <field name="cargo"/>
                    <field name="sede_id"/>
                    <filter string="Puede firmar" name="puede_firmar" domain="[('puede_firmar_documentos', '=', True)]"/>
                    <filter string="Activos" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactivos" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Agrupar por">
                        <filter name="group_by_cargo" string="Cargo" context="{'group_by': 'cargo'}"/>
                        <filter name="group_by_sede" string="Sede" context="{'group_by': 'sede_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Acción para autoridades -->
        <record id="action_sgu_autoridad" model="ir.actions.act_window">
            <field name="name">Autoridades</field>
            <field name="res_model">sgu.autoridad</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_sgu_autoridad_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Registrar una nueva autoridad
                </p>
            </field>
        </record>
    </data>
</odoo>
