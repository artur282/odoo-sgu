<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_institucion_universitaria_form" model="ir.ui.view">
            <field name="name">res.company.sgu.form</field>
            <field name="model">res.company</field>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <form string="Institución Universitaria">
                    <sheet>
                        <field name="logo" widget="image" class="oe_avatar"
                            options='{"preview_image": "image_128"}' />
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" placeholder="Nombre de la Institución" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="codigo" placeholder="Código de la Institución" />
                                <field name="phone" widget="phone" placeholder="Teléfono" />
                                <field name="email" widget="email" placeholder="Correo electrónico" />
                                <field name="currency_id" groups="base.group_multi_currency" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Configuración Adicional">
                                <group>
                                    <field name="descripcion" placeholder="Descripción de la Institución" />
                                </group>
                            </page>
                            <page string="Sedes">
                                <field name="sede_ids">
                                    <list string="Sedes">
                                        <field name="name" />
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_sgu_institucion" model="ir.actions.act_window">
            <field name="name">Mi Institución</field>
            <field name="res_model">res.company</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_institucion_universitaria_form"/>
            <field name="res_id" ref="base.main_company" />
            <field name="target">main</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Aquí puedes ver y editar la información de tu Institución Universitaria actual.
                </p>
            </field>
        </record>
    </data>

</odoo>