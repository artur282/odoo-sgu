<odoo>
    <record id="view_instituto_form" model="ir.ui.view">
        <field name="name">sgu.instituto.form</field>
        <field name="model">sgu_institucion</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Espacio reservado para botones inteligentes -->
                    </div>
                    <div class="oe_title">
                        <field name="logo" widget="image" class="oe_avatar"/>
                        <label for="nombre_institucion" class="oe_edit_only"/>
                        <h1><field name="nombre_institucion" placeholder="Nombre del instituto" required="1"/></h1>
                        <h2><field name="codigo_institucion" placeholder="Código único" required="1"/></h2>
                    </div>
                    <group>
                        <group name="grupo_info_general">
                            <field name="descripcion" placeholder="Descripción de la institución"/>
                        </group>
                        <group name="grupo_info_contacto">
                            <field name="correo_institucion" widget="email" placeholder="correo@ejemplo.com"/>
                            <field name="telefono_institucion" widget="phone" placeholder="+00 000 000 000"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Sedes" name="sedes">
                            <field name="institutos_ids">
                                <list editable="bottom">
                                    <field name="nombre_sedes" required="1"/>
                                    <field name="codigo_sede" required="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Firmas" name="firmas">
                            <group col="3">
                                <group>
                                    <field name="firma_rector" widget="image" options="{'preview_image': 'firma_rector', 'size': [150, 150]}"/>
                                    <div class="text-center"><span>Firma Rector</span></div>
                                </group>
                                <group>
                                    <field name="firma_director" widget="image" options="{'preview_image': 'firma_director', 'size': [150, 150]}"/>
                                    <div class="text-center"><span>Firma Director</span></div>
                                </group>
                                <group>
                                    <field name="firma_secretaria" widget="image" options="{'preview_image': 'firma_secretaria', 'size': [150, 150]}"/>
                                    <div class="text-center"><span>Firma Secretaria</span></div>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_instituto_list" model="ir.ui.view">
        <field name="name">sgu.instituto.list</field>
        <field name="model">sgu_institucion</field>
        <field name="arch" type="xml">
            <list>
                <field name="logo" widget="image" options="{'size': [40, 40]}" width="40"/>
                <field name="nombre_institucion"/>
                <field name="codigo_institucion"/>
                <field name="correo_institucion" optional="show"/>
                <field name="telefono_institucion" optional="show"/>
                <field name="descripcion" optional="hide"/>
                <field name="institutos_ids" widget="many2many_tags" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="view_instituto_search" model="ir.ui.view">
        <field name="name">sgu.instituto.search</field>
        <field name="model">sgu_institucion</field>
        <field name="arch" type="xml">
            <search string="Buscar instituciones">
                <field name="nombre_institucion"/>
                <field name="codigo_institucion"/>
                <field name="descripcion"/>
                <field name="correo_institucion"/>
                <field name="telefono_institucion"/>
                <separator/>
                <filter string="Con sedes" name="with_sedes" domain="[('institutos_ids', '!=', False)]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Código" name="group_by_codigo" context="{'group_by': 'codigo_institucion'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="sgu_instituciones_action" model="ir.actions.act_window">
        <field name="name">Instituciones</field>
        <field name="res_model">sgu_institucion</field>
        <field name="view_mode">list,form</field> 
        <field name="search_view_id" ref="view_instituto_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva institución
            </p>
            <p>
                Registre los detalles de las instituciones educativas y sus sedes.
            </p>
        </field>
    </record>
</odoo>