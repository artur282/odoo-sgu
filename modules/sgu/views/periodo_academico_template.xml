<odoo>
    <data>
        <record id="periodo_form_view" model="ir.ui.view">
            <field name="name">periodo.form.view</field>
            <field name="model">prueba1.periodoa</field>
            <field name="arch" type="xml">
                <form string="Periodo Académico">
                    <sheet>
                        <group>
                            <group>
                                <field name='anio' widget="integer"/>
                                <field name="modalidad"/>
                            </group>
                            <group>
                                <field name="periodo" options="{'attrs': {'readonly': [('modalidad', '=', 'Anual')]}}" />
                                <field name="estado"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="periodo_list_view" model="ir.ui.view" >
            <field name="name">periodo.list.view</field>
            <field name="model">prueba1.periodoa</field>
            <field name="arch" type="xml">
                <list string="Periodo Académico">
                    <field name='anio' widget="integer" />
                    <field name='modalidad' />
                    <field name='periodo' />
                    <field name='estado' widget="boolean_toggle" />
                </list>
            </field>
        </record>

        <record id='periodo_action' model='ir.actions.act_window' >
            <field name='name'>Periodo Académico</field>
            <field name='res_model'>prueba1.periodoa</field>
            <field name='view_mode'>list,form</field>
        </record>

<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    </data>
</odoo>
