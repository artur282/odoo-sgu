<odoo>
    <record id="view_sgu_asignar_carrera_sede_form" model="ir.ui.view">
        <field name="name">sgu.asignar.carrera.sede.form</field>
        <field name="model">sgu_asignar_carrera_sede</field>
        <field name="arch" type="xml">
            <form string="Asignar Carreras a Sedes">
                <sheet>
                    <group>
                        <field name="sede_id" placeholder="Seleccione una sede"/>
                        <field name="carrera_id" widget="many2many_checkboxes" placeholder="Seleccione las carreras"/>
                        <field name="active" string="Activo"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_sgu_asignar_carrera_sede_list" model="ir.ui.view">
        <field name="name">sgu.asignar.carrera.sede.list</field>
        <field name="model">sgu_asignar_carrera_sede</field>
        <field name="arch" type="xml">
            <list string="Asignar Carreras a Sedes">
                <field name="sede_id" string="Sede"/>
                <field name="carrera_id" string="Carreras" widget="many2many_tags"/>
                <field name="active" string="Activo" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="sgu.sgu_asignar_carrera_sede_action" model="ir.actions.act_window">
        <field name="name">Asignar Carreras a Sedes</field>
        <field name="res_model">sgu_asignar_carrera_sede</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cree una nueva asignaciÃ³n de carrera a sede.
            </p>
        </field>
    </record>
</odoo>
