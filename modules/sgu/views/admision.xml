<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- VISTA BÚSQUEDA del Registro de Carrera para Estudiantes -->
    <record id="view_student_career_registration_search" model="ir.ui.view">
        <field name="name">student.career.registration.search</field>
        <field name="model">student.career.registration</field>
        <field name="arch" type="xml">
            <search string="Buscar Registros de Carrera">
                <field name="student_id"/>
                <field name="carrera_id"/>
                <field name="cohorte"/>
                <filter string="Mi Cohorte" name="my_cohorte" domain="[('cohorte', '=', context.get('cohorte', False))]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Estudiante" name="group_by_student" context="{'group_by': 'student_id'}"/>
                    <filter string="Carrera" name="group_by_carrera" context="{'group_by': 'carrera_id'}"/>
                    <filter string="Cohorte" name="group_by_cohorte" context="{'group_by': 'cohorte'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- VISTA LISTA del Registro de Carrera para Estudiantes -->
    <record id="view_student_career_registration_list" model="ir.ui.view">
        <field name="name">student.career.registration.list</field>
        <field name="model">student.career.registration</field>
        <field name="arch" type="xml">
            <list string="Registros de Carrera">
                <field name="student_id" widget="many2one_avatar_user"/>
                <field name="carrera_id"/>
                <field name="cohorte"/>
            </list>
        </field>
    </record>

    <!-- VISTA FORM del Registro de Carrera para Estudiantes -->
    <record id="view_student_career_registration_form" model="ir.ui.view">
        <field name="name">student.career.registration.form</field>
        <field name="model">student.career.registration</field>
        <field name="arch" type="xml">
            <form string="Registro de Carrera para Estudiantes">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="student_id" placeholder="Estudiante" options="{'no_create': True}"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="carrera_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="cohorte"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACCIÓN para abrir el Registro de Carrera para Estudiantes -->
    <record id="action_student_career_registration" model="ir.actions.act_window">
        <field name="name">Admision de estudiante</field>
        <field name="res_model">student.career.registration</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_student_career_registration_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Registra una nueva admisión de estudiante
            </p>
            <p>
                Crea un nuevo registro de admisión de estudiante en una carrera.
            </p>
        </field>
    </record>
    
    <!-- Menú para acceder a los registros de carrera -->
    <menuitem id="menu_student_career_registration" 
              name="Admisiones" 
              action="action_student_career_registration"
              sequence="10"/>
</odoo>