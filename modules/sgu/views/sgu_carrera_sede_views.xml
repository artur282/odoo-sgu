<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de formulario para carreras por sede -->
        <record id="view_sgu_carrera_sede_form" model="ir.ui.view">
            <field name="name">sgu.carrera.sede.form</field>
            <field name="model">sgu.carrera.sede</field>
            <field name="arch" type="xml">
                <form string="Carrera en Sede">
                    <header>
                        <field name="active" invisible="1"/>
                        <button name="toggle_active" type="object" 
                                class="oe_highlight" 
                                invisible="active"
                                string="Activar"/>
                        <button name="toggle_active" type="object" 
                                invisible="not active"
                                string="Inactivar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="carrera_id" options="{'no_create': True}" placeholder='Nombre de la carrera'/>
                                <field name="sede_id" options="{'no_create': True}" placeholder='Nombre de la sede'/>
                                <field name="active" readonly="1" invisible="not id"/>
                            </group>
                            <group>
                                <field name="observaciones" placeholder="Ingrese observaciones adicionales..."/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista tree para carreras por sede -->
        <record id="view_sgu_carrera_sede_list" model="ir.ui.view">
            <field name="name">sgu.carrera.sede.list</field>
            <field name="model">sgu.carrera.sede</field>
            <field name="arch" type="xml">
                <list string="Carreras por Sede" decoration-muted="active == False">
                    <field name="display_name" string="Carrera en Sede"/>
                    <field name="carrera_id"/>
                    <field name="sede_id"/>
                    <field name="active" string="Activo"/>
                </list>
            </field>
        </record>

        <!-- Vista search para carreras por sede -->
        <record id="view_sgu_carrera_sede_search" model="ir.ui.view">
            <field name="name">sgu.carrera.sede.search</field>
            <field name="model">sgu.carrera.sede</field>
            <field name="arch" type="xml">
                <search string="Buscar carreras por sede">
                    <field name="carrera_id"/>
                    <field name="sede_id"/>
                    <filter string="Activas" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactivas" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <group expand="0" string="Agrupar por">
                        <filter name="group_by_carrera" string="Carrera" context="{'group_by': 'carrera_id'}"/>
                        <filter name="group_by_sede" string="Sede" context="{'group_by': 'sede_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- AcciÃ³n para carreras por sede -->
        <record id="action_sgu_carrera_sede" model="ir.actions.act_window">
            <field name="name">Carreras por Sede</field>
            <field name="res_model">sgu.carrera.sede</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_sgu_carrera_sede_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Registrar una nueva asignaciÃ³n de carreras a sede
                </p>
            </field>
        </record>
    </data>
</odoo>
