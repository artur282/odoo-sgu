<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Definición de grupos de seguridad -->
        <record id="group_sgu_super_usuario" model="res.groups">
            <field name="name">SGU / Super Usuario</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Super Usuario para el Sistema de Gestión Universitaria. Tiene acceso total a todas las funcionalidades.</field>
        </record>
        
        <record id="group_sgu_usuario_admin" model="res.groups">
            <field name="name">SGU / Usuario Admin</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Usuario administrador para el Sistema de Gestión Universitaria. Puede asignar privilegios a usuarios sectoriales.</field>
        </record>
        
        <record id="group_sgu_operador_admin" model="res.groups">
            <field name="name">SGU / Operador Admin</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Operador administrativo para el Sistema de Gestión Universitaria. Puede consultar admitidos, realizar inscripciones y generar reportes.</field>
        </record>
        
        <record id="group_sgu_estudiante" model="res.groups">
            <field name="name">SGU / Estudiante</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
            <field name="comment">Estudiantes registrados en el sistema. Pueden actualizar datos, consultar horarios y descargar constancias.</field>
        </record>

        <!-- Reglas de registro para cada grupo -->
        <record id="rule_sgu_all_super_usuario" model="ir.rule">
            <field name="name">Super usuario puede ver y editar todo</field>
            <field name="model_id" ref="model_sgu_institucion"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_sgu_super_usuario'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Asignación de seguridad para los usuarios estudiantes -->
        <record id="rule_sgu_estudiante_propio" model="ir.rule">
            <field name="name">Estudiante solo ve sus propios datos</field>
            <field name="model_id" ref="model_sgu_usuarios"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_sgu_estudiante'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
